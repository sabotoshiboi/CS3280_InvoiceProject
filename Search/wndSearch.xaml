        <Label x:Name="LabelInvoiceNum" Content="Invoice Number" HorizontalAlignment="Left" Margin="253,20,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelDate" Content="Invoice Date" HorizontalAlignment="Left" Margin="253,100,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelTotalCost" Content="Invoice Cost" HorizontalAlignment="Left" Margin="253,174,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelSelectedInvoice" Content="Selected Invoice:" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelSelectedInvoiceNum" Content="None" HorizontalAlignment="Left" Margin="103,280,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
