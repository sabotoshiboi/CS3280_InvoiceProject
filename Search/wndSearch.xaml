        <ComboBox x:Name="ComboBox1" HorizontalAlignment="Left" Margin="253,51,0,0" VerticalAlignment="Top" Width="168" SelectionChanged="ComboBox1_SelectionChanged"/>
        <ComboBox x:Name="ComboBox2" HorizontalAlignment="Left" Margin="253,126,0,0" VerticalAlignment="Top" Width="168" SelectionChanged="ComboBox2_SelectionChanged"/>
        <ComboBox x:Name="ComboBox3" HorizontalAlignment="Left" Margin="253,200,0,0" VerticalAlignment="Top" Width="168" SelectionChanged="ComboBox3_SelectionChanged"/>
